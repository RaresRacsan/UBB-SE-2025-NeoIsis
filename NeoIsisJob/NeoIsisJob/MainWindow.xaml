<Window
    x:Class="NeoIsisJob.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NeoIsisJob.Models"
    Title="User Test">

    <StackPanel Margin="20" HorizontalAlignment="Center">
        <!-- Textbox to enter User ID -->
        <TextBox x:Name="UserIdTextBox" PlaceholderText="Enter User ID" Width="200" Margin="0,10"/>

        <!-- Buttons for Add, Get, and Delete actions -->
        <Button Content="Add User" Click="AddUser_Click" Width="200" Margin="0,5"/>
        <Button Content="Get User" Click="GetUser_Click" Width="200" Margin="0,5"/>
        <Button Content="Delete User" Click="DeleteUser_Click" Width="200" Margin="0,5"/>

        <!-- ListView to display all users -->
        <TextBlock Text="All Users:" Margin="10,20,0,10" />
        <ListView x:Name="UsersListView" Width="300" Height="200">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:UserModel">
                    <StackPanel>
                        <TextBlock Text="{Binding Id}" FontSize="16" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--for navigating to workout page-->
        <Frame x:Name="MainFrame"/>
        <Button Content="Go to Workout Page" Click="GoToWorkoutPage" Margin="10"/>
        
    </StackPanel>
   
</Window>
